{% extends 'LsiBiblioBundle::layout.html.twig' %}

{% block title %}
	Liste des collections
{% endblock %}

{% block menu_suite %}
	<a href="" class="current">Collection</a>
{% endblock %} 

{% block column_w610 %}
	<div class="header_01">Liste des collections</div>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="col_couverture">{{ entity.id }}</td>
                <td class="col_titre">
                <a href="{{ path('lien_collection_show', {'id': entity.id,'slug': entity.getSlug }) }}">{{ entity.nom }}</a>
                </td>
                <td class="col_titre">
                <a href="{{ path('lien_collection_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li class="col_titre">
            <a href="{{ path('lien_collection_new') }}">
                Nouvelle collection
            </a>
        </li>
    </ul>
    {% endblock %}
