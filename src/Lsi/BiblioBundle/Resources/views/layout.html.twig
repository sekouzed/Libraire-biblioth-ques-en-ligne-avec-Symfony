<!DOCTYPE html>
    <html>
        <head>
            <title>
                {% block title %}
                    lSI-bibliotheque numerique
                {% endblock %}
            </title>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('bundles/lsibiblio/css/templatemo_style.css') }}" type="text/css"media="all" />
            {% endblock %}
            {% block javascripts %}
            {% endblock %}
            <link rel="shortcut icon" href="{{ asset('bundles/lsibiblio/images/favicon.ico') }}" />
            <script type="text/javascript">var switchTo5x=true;</script>
<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
<script type="text/javascript">stLight.options({publisher: "4f863e91-c97c-4f1f-b247-91b579eb7840", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
        </head>
    <body>
    <div id="templatemo_header_wrapper">

	<div id="templatemo_header"> 
    	<div id="site_titre">
			Bibliothèque en ligne 
		</div>  
    	<div id="site_logo"> 
			<img src="{{ asset('bundles/lsibiblio/images/log.png') }}" alt="" />
		</div> 
    </div> <!--end of header -->

</div> <!-- end of header wrapper -->

<div id="templatemo_menu_wrapper"> 
    <div id="templatemo_menu">
		{% block templatemo_menu %}
			<ul> 
    			<li>{% block menu_accueil %}<a href="{{ path('lien_livre') }}">Accueil</a>{% endblock %} </li>
    			<li>{% block menu_catalogue %}<a href="{{ path('lien_livre_show_all') }}">Le catalogue</a>{% endblock %} </li>
    			<li>{% block menu_abonnee %}<a href="{{ path('lien_user_new') }}" class="last">S'abonnez</a>{% endblock %} </li>
    			<li>{% block menu_suite %}{% endblock %} </li>                                 
			</ul>    	
		{% endblock %} 
    </div> <!-- end of menu -->
</div> <!-- end of menu wrapper -->

<div id="tempatemo_content_wrapper">
{% block tempatemo_content_wrapper %}




    <div id="templatemo_content"> 
    	<div class="recent_projects"> 
			{% block recent_projects %}
			
			{% endblock %} 
        </div> 
        <div id="content_panel"> 
           
            <div id="column_w610">  
                        
				{% block column_w610 %}
				
				{% endblock %} 
            </div> <!-- end of column w610 --> 
            <div id="column_w290">   
                
                {% if app.session.get('loginId') %}   
                    <div class="header_02">Bonjour,{{ app.session.get('loginNomComplet') }}</div> 
    				<div class="column_w290_content">  
                        <ul class="record_actions"> 
                            <li class="col_titre"><a href="{{ path('lien_user_edit', { 'id': app.session.get('loginId') }) }}">Modifier mon profil</a></li>
                            <li class="col_titre"><a href="{{ path('lien_user_logout') }}">Deconnexion</a></li>
                        </ul>
                       
                        {% if app.session.get('loginRole')=='admin' %} 
                           <ul class="record_actions"> 
                                <li class="col_titre"><a href="{{ path('lien_livre_new') }}">Nouveau livre </a></li>
                                <li class="col_titre"><a href="{{ path('lien_livre_all') }}">liste des livres</a></li>
                                <li class="col_titre"><a href="{{ path('lien_collection') }}">liste des collection</a></li> 
                                <li class="col_titre"><a href="{{ path('lien_user') }}">liste des utilisateurs</a></li>
                                <li class="col_titre"><a href="{{ path('lien_avis') }}">Les avis des utilisateurs</a></li>
                           </ul>  
                        {% endif %}     
                
    				</div>  
                     {% else %}   
                    <div class="header_02">Identification</div> 
    				<div class="column_w290_content"> 
    					<form class="formulaire" action="{{ path('lien_user_login') }}" method="post">
    						<label>Email</label>
    						<input type="text" name="mail_user" value=""/>
    						<label>Mot de passe</label> 
    						<input type="password" name="pwd_user"/>
    						<input type="submit" value="Connexion"/> 
    					</form>   
                        <div class="col_titre float_r"><a href="{{ path('lien_user_new') }}">S'abonnez</a></div>  
				    </div>  
                    
                {% block column_w290 %}  
                            		
                {% endblock %} 
                {% endif %}         
            </div> <!-- end of column 290 --> 
            <div class="cleaner"></div>
            
        </div> <!-- end of content panel -->
    
        <div class="cleaner"></div>
    </div> <!-- end of content -->
    
        {% endblock %}  
</div> <!-- end of content wrapper -->

<div id="templatemo_footer_wrapper">

	<div id="templatemo_footer">
    	
        <div class="section_w368"> 
        <div class="section_w920">
        Copyright © 2013 <a href="#">LSI</a> | Designed by <a href="">Dioubaté Sékou, Hadia, Amine, Meriem</a>
        </div> 
        <div class="margin_bottom_20"></div>
        <div class="cleaner"></div>
    </div> <!-- end of footer -->
</div> <!-- end of footer -->
	</body>
</html>